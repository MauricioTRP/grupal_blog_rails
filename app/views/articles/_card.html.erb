  <div class = "col">
    <div class = "row">
      <% @articles.each do |article| %>
        <div class="card m-3" style="width: 18rem;">
          <img src="https://images.unsplash.com/photo-1620421680010-0766ff230392?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8ZnJhY3RhbHxlbnwwfHwwfHw%3D&w=1000&q=80" class="card-img-top p-2" alt="card_img">
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= article.body[0..50] %>...</p>
            <%= link_to "Seguir leyendo", article_path(article), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
